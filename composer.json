{
    "name": "mailcarrier-dev/mailcarrier",
    "description": "User-friendly, API-ready mail platform with templates and logs",
    "keywords": [
        "mailcarrier-dev",
        "laravel",
        "mailcarrier"
    ],
    "homepage": "https://github.com/mailcarrier-dev/mailcarrier",
    "license": "MIT",
    "authors": [
        {
            "name": "Danilo Polani",
            "email": "hello@mailcarrier.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "filament/filament": "^2.14",
        "illuminate/contracts": "^9.0",
        "illuminate/database": "^9.0",
        "jessarcher/laravel-castable-data-transfer-object": "^2.2",
        "latte/latte": "^3.0",
        "ralphjsmit/laravel-filament-components": "^1.1",
        "spatie/data-transfer-object": "^3.8",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "MailCarrier\\MailCarrier\\": "src",
            "MailCarrier\\MailCarrier\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailCarrier\\MailCarrier\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MailCarrier\\MailCarrier\\MailCarrierServiceProvider"
            ],
            "aliases": {
                "MailCarrier": "MailCarrier\\MailCarrier\\Facades\\MailCarrier"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
